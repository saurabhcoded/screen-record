{
  "manifest_version": 3,
  "name": "Screen Recorder Extension",
  "version": "1.0",
  "description": "A simple screen recorder Chrome extension",
  "permissions": ["activeTab", "desktopCapture", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
